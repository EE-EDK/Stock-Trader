# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Finnhub API Key (get from https://finnhub.io/register)
FINNHUB_API_KEY=your_finnhub_key_here

# FRED API Key (get from https://fred.stlouisfed.org/docs/api/api_key.html)
FRED_API_KEY=your_fred_key_here

# Email Configuration (for Gmail, use app password not regular password)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_SENDER=your-email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_RECIPIENTS=your-email@gmail.com

# Database Path
DATABASE_PATH=data/sentiment.db
